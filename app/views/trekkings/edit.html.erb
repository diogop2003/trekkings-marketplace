<div class="container" style="margin-top: 6rem;">
  <h2>Add a product:</h2>
  <%= simple_form_for @trekking do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :category, :collection => %w[items shoes backpack clothes]%>
    <%= f.input :price %>
    <%= f.input :photo, as: :file, direct_upload: true %>
    <%= f.button :submit, class: "btn btn-success", data: {confirm: "Are you sure?"} %>
  <% end %>
</div>
