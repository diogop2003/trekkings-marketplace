
<div class="container" style="margin-top: 5rem;">
  <h2>Your Products:</h2>
</div>
<%# <div class="container_card mx-5 my-5"> %>
  <% @trekkings.each do |trekking| %>
  <div class="card-product m-5">
    <img src="<%= trekking.photo.attached? ? cl_image_path(trekking.photo.key) : 'https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRsNGGjrfSqqv8UjL18xS4YypbK-q7po_8oVQ&usqp=CAU' %>">
    <div class="card-product-infos">
      <ul class="card_orders">
        <li style="list-style: none;"><%= trekking.user.name %></li>
        <li style="list-style: none;"><%= trekking.category %></li>
        <li style="list-style: none;"><%= trekking.description %></li>
        <li style="list-style: none;"><%= trekking.price %></li>
      </ul>
      <%= link_to "Delete", edit_trekking_path, class: 'btn btn-outline-success' %>
      <%= link_to "Edit", "/trekkings/:id", class: 'btn btn-outline-success' %>
    </div>
  </div>
<% end %>
