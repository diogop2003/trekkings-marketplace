          <%= link_to "My Orders", my_orders_path, class: "nav-link" %>
          <%= link_to "My Products", trekkings_path, class: "nav-link" %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "nav-link" %>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
