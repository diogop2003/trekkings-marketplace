<div class="container" style="margin-top: 10rem;">

  <div class="card mb-3" style="max-width: 900px;">
  <div class="trekking-card-image" style="background-image: url(<%= cl_image_path(@trekking.photo.key) %>)"></div>
    <div class="card-trip-infos">
      <div>
        <h2><%= @trekking.name %></h2>
        <p>><%= @trekking.description %></p>
      </div>
      <h3 class="card-trip-pricing">R$<%= @trekking.price %></h3>
    </div>
  </div>
  <%= simple_form_for [@trekking, @order] do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :number %>
    <%= f.input :complment %>
    <%= f.input :cpf %>
    <%= f.input :cardnumber %>
    <%= f.input :code %>
    <%= f.input :validates %>
    <%= f.button :submit %>
  <% end %>
</div>
