
<div class="container" style="margin-top: 5rem;">
  <h2>Your Orders:</h2>
</div>
<div class="container_card mx-5 my-5">
  <% @orders.each do |order| %>
  <div class="card-product">

    <img src=<%= order.trekking.photo.attached? ? cl_image_path(order.trekking.photo.key) : "app/assets/images/no_photo.jpg" %>/>

    <div class="card-product-infos">
      <ul class="card_orders">
          <li><%= order.user.name %>
          <%= order.trekking.name %>
          <%= order.address %></li>
      </ul>
  </div>
</div>
<% end %>
